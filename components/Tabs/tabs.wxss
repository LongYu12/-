/* components/Tabs/tabs.wxss */
.tabs {
  display: flex;
  height: 75rpx;
  padding: 10rpx 10rpx 0 10rpx;
  border-bottom: 2rpx solid #eeeeee;
  font-size: 35rpx;
}
.tabs .tabs-item {
  flex: 1;
  width: 33.33vh;
  text-align: center;
}
.active {
  border-bottom: 5rpx solid var(--themeColor);
  color: var(--themeColor);
}
